<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:paddingTop="10dp"
                android:text="NUEVA CUENTA"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="DATOS PERSONALES"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="CÉDULA"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="NOMBRE"
            android:inputType="textPersonName|textCapCharacters"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="APELLIDO"
            android:inputType="textPersonName|textCapCharacters"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnBirthDate"
            style="?android:spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:hint="FECHA DE NACIMIENTO"
            android:onClick="openDatePicker"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="CORREO ELECTRÓNICO"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="AUTENTIFICACIÓN"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="NOMBRE DE USUARIO"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="10dp"
            android:text="Requisitos del usuario"
            android:textColor="@color/light_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="CONTRASEÑA"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="10dp"
            android:text="Requisitos de la contraseña"
            android:textColor="@color/light_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="CONFIRME SU CONTRASEÑA"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textColor="@color/dark_text"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPasswordCoincidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="10dp"
            android:textColor="@color/error_color"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins_medium"
                android:text="CANCELAR"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:enabled="false"
                android:fontFamily="@font/poppins_medium"
                android:onClick="createAccount"
                android:text="CREAR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>