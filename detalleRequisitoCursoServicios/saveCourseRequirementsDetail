<?php
header('Access-Control-Allow-Origin:*');
header('Access-Control-Allow-Headers: Origin, X-Requested-with, Content-type, Authorization');
header('Content-Type: application/json');
header('Access-Control-Allow-Methods: POST, GET, OPTIONS');

include "connection.php";

$idCurso = mysqli_real_escape_string($conn, $_POST['ID_CURSO']);
$requisitoConocimiento = mysqli_real_escape_string($conn, $_POST['REQUISITO_CONOCIMIENTO']);

$sentencia = $conn->prepare("INSERT INTO detalle_requisitos_cursos (id_curso, requisito_conocimiento) VALUES(?, ?)");
$sentencia->bind_param('is', $idCurso, $requisitoConocimiento);

$resultado = $sentencia->execute();

if ($resultado) {
    echo json_encode("Se guardo correctamente");
}

$sentencia->close();
$conn->close();
?>